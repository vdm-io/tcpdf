    <files>
        <folder>config</folder>
        <folder>fonts</folder>
        <folder>include</folder>
        <folder>tools</folder>
        <file>tcpdf.php</file>
        <file>tcpdf_autoconfig.php</file>
        <file>tcpdf_barcodes_1d.php</file>
        <file>tcpdf_barcodes_2d.php</file>
        <file>tcpdf_import.php</file>
        <file>tcpdf_parser.php</file>
    </files>
    
    <updateservers>
